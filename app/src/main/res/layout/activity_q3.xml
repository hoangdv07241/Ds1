<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="TextBinding"
            type="com.example.ds1.TextBinding" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373737"
        android:orientation="vertical"
        tools:context=".Q3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvQ3sc"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/tvQ3up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{TextBinding.text1}"
                android:textColor="#FF0000"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/ivQ3home"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="80dp"
                android:src="@drawable/ic_home"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQ3left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{TextBinding.text2}"
                android:textColor="#003DFF"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvQ3right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="@{TextBinding.text3}"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvQ3down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="@{TextBinding.text4}"
            android:textColor="#00FF0C"
            android:textSize="50sp" />

    </LinearLayout>
</layout>