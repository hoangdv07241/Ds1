<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="TextBinding"
            type="com.example.ds1.TextBinding" />
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373737"
        android:orientation="vertical"
        tools:context=".Q2">

        <ImageView
            android:id="@+id/ivQ2Reset"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/reset_ic"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:text="@{TextBinding.text1}"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:textColor="#ffff"
            android:textSize="120sp"
            android:text="@{TextBinding.text2}"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/btnC1Q2"
                    android:text="@{TextBinding.text3}"
                    android:textSize="25sp"
                    android:textColor="#ffff"
                    android:background="#95989A"
                    android:layout_width="170dp"
                    android:layout_height="60dp"/>

                <Button
                    android:id="@+id/btnC3Q2"
                    android:text="@{TextBinding.text4}"
                    android:textSize="25sp"
                    android:textColor="#ffff"
                    android:background="#95989A"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >

                <Button
                    android:id="@+id/btnC2Q2"
                    android:text="@{TextBinding.text5}"
                    android:textSize="25sp"
                    android:textColor="#ffff"
                    android:background="#95989A"
                    android:layout_width="170dp"
                    android:layout_height="60dp"/>

                <Button
                    android:id="@+id/btnC4Q2"
                    android:text="@{TextBinding.text6}"
                    android:textSize="25sp"
                    android:textColor="#ffff"
                    android:background="#95989A"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>